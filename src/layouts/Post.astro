---
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE } from '../config';
export interface Props {
  frontmatter: {
    title: string
    description: string
    createdAt?: string
    updatedAt?: string
    heroImage?: string
    tags: string[]
  }
}

const { frontmatter: {title, description, tags} } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
        <title>{title + ` - ${SITE_TITLE}`}</title>
	</head>
	<body class="bg-stone-200 dark:bg-slate-800 dark:text-neutral-300">
		<Navbar />
		<article class="px-8 max-w-3xl mx-auto pt-[48px]">
			<div class="container mx-auto border-solid border-zinc-500 border-x-2 my-4">
            	<h1 class="text-3xl mx-6">{title}</h1>
            	<div class="mx-6">{description}</div>
            	<hr class="border-stone-700 dark:border-neutral-300 border-top my-2 mx-6"/>
				<div class="mx-6">
					<slot />
				</div>
			</div>
		</article>
	</body>
	<Footer />
</html>
<style is:global>
	:root {
		--accent: 124, 58, 237;
		--accent-gradient: linear-gradient(45deg, rgb(var(--accent)), #da62c4 30%, white 60%);
	}

	html, body {
		height: 100%;
	}
</style>
