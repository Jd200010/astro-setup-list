---
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import Content from '../components/Content.astro'
import { SITE_TITLE } from '../config';
export interface Props {
  frontmatter: {
    title: string
    description: string
    createdAt?: string
    updatedAt?: string
    heroImage?: string
    tags: string[]
  }
}

const { frontmatter: {title, description, tags} } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
        <title>{title + ` - ${SITE_TITLE}`}</title>
	</head>
	<body class="bg-stone-300 dark:bg-slate-900 dark:text-neutral-300">
		<Navbar />
		<article class="bg-stone-200 dark:bg-slate-800 px-8 max-w-3xl mx-auto pt-[48px] h-screen">
			<div class="container mx-auto my-4">
				<Content>
            		<h1 class="text-3xl mx-6">{title}</h1>
            		<div class="mx-6">{description}</div>
            		<hr class="border-stone-700 dark:border-neutral-300 border-top my-2 mx-6"/>
					<div class="grid mx-6 leading-6 gap-y-2">
						<slot />
					</div>
				</Content>
			</div>
		</article>
	</body>
	<Footer />
</html>
<style is:global>
	:root {
		--accent: 124, 58, 237;
		--accent-gradient: linear-gradient(45deg, rgb(var(--accent)), #da62c4 30%, white 60%);
	}

	html, body {
		height: 100%;
	}
</style>
